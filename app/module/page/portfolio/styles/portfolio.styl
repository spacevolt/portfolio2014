@import 'nib'
@import '../../../../styles/global.styl'

.portfolio-carousel
	position: absolute
	top: 0
	left: 100%
	width: 100%
	height: 100%
	overflow: hidden
	user-select: none
	-webkit-user-drag: none
	user-drag: none
	cursor: -webkit-grab
	cursor: -moz-grab
	transition: left 850ms ease-in-out
	&.current
		left: 0%
	&.prev
		left: -100%
	*
		user-select: none
		-webkit-user-drag: none
		user-drag: none
	&.mousedown
		cursor: default
		cursor: -webkit-grabbing
		cursor: -moz-grabbing
	.project-wrapper
		position: relative
		width: 100%
		height: 100%