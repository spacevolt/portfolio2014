@import 'nib'
@import '../../../../styles/global.styl'

.portfolio-carousel
	position: absolute
	top: $nav-height
	left: 100%
	width: 100%
	height: 100%
	overflow: hidden
	user-select: none
	-webkit-user-drag: none
	user-drag: none
	cursor: -webkit-grab
	cursor: -moz-grab
	transition: left 850ms ease-in-out
	&.current
		left: 0%
	&.prev
		left: -100%
	*
		user-select: none
		-webkit-user-drag: none
		user-drag: none
	&.mousedown
		cursor: default
		cursor: -webkit-grabbing
		cursor: -moz-grabbing
	.project-wrapper
		position: absolute
		top: 0
		left: 0
		height: 100%
		&.primed
			transition: margin-left 1s ease-in-out
		&.last-slide
			animation: lastSlide 0.8s ease-in-out
		&.first-slide
			animation: firstSlide 0.8s ease-in-out

@keyframes firstSlide
	0% { transform: translateX(30px) }
	70% { transform: translateX(-26px) }
	85% { transform: translateX(15px) }
	90% { transform: translateX(-14px) }
	95% { transform: translateX(8px) }
	100% { transform: translateX(0px) }

@keyframes lastSlide
	0% { transform: translateX(-30px) }
	70% { transform: translateX(26px) }
	85% { transform: translateX(-15px) }
	90% { transform: translateX(14px) }
	95% { transform: translateX(-8px) }
	100% { transform: translateX(0px) }