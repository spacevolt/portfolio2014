@import 'nib'
@import '../../../../styles/global.styl'

.portfolio-carousel
	position: relative
	width: 100%
	height: 100%
	overflow: hidden
	user-select: none
	-webkit-user-drag: none
	user-drag: none
	*
		user-select: none
		-webkit-user-drag: none
		user-drag: none
	&.mousedown
		cursor: default
	.project-wrapper
		position: absolute
		top: 0
		left: 0
		height: 100%
		&.primed
			transition: margin-left 1s ease-in-out