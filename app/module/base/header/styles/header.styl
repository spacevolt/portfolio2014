@import 'nib'
@import '../../../../styles/global.styl'

.hud
	position: absolute
	top: 15%
	height: $nav-height
	width: 100%
	font-size: 14px
	font-weight: 700
	color: #ffffff
	clearfix()
	z-index: 5
	.links
		padding-left: 10px
	p
		display: block
		margin: 0
		padding: 0 50px
		width: 100%
		line-height: $nav-height
	.designer-logo
		display: inline-block
		width: 49%
		cursor: pointer
	.about-link
		display: inline-block
		width: 50%
		text-align: right
		cursor: pointer
	.slide-counter
		float: right
		padding: 0 10px
		height: 100%
		line-height: $nav-height