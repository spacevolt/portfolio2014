@import 'nib'
@import '../../../../styles/global.styl'

.portfolio-carousel
	position: absolute
	top: 0
	left: 100%
	width: 100%
	height: 100%
	transition: left 850ms ease-in-out,
				transform 0.4s ease-in-out
	overflow: hidden
	z-index: 1
	&.current
		left: 0%
	&.prev
		left: -100%
	*
		user-select: none
		-ms-user-select: none
		-webkit-user-drag: none
		user-drag: none
	&.mousedown
		cursor: default
		cursor: -webkit-grabbing
		cursor: -moz-grabbing
	.project-wrapper,
	.about-wrapper
		position: absolute
		left: 0
		width: 100%
		height: 100%
	.about-wrapper
		top: -100%
		background-color: orange
		z-index: 10
		transition: top 0.8s ease-in-out
	&.about .about-wrapper
		top: 0%

	.project-wrapper
		overflow: hidden
		top: 0%
		user-select: none
		-webkit-user-drag: none
		user-drag: none
		cursor: -webkit-grab
		cursor: -moz-grab
		transition: top 0.7s ease-in-out
	&.about .project-wrapper
		top: 45%
		transition: top 0.9s ease-in-out