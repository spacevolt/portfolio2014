@import 'nib'
@import '../../../../../styles/global.styl'

.project-slide
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background: linear-gradient(#c6b48b,#EDEAD0)

.project-feature
	position: relative
	width: 100%
	height: 100%
	min-height: 320px
	overflow: hidden

.project-bgimg
	position: absolute
	top: 0
	left: 0
	max-width: none

.project-info
	position:absolute
	padding: 15px
	max-width: 65%
	border-radius: 5px
	background-color: rgba(25,25,25,0.3)
	z-index: 5
	.project-titleblock
		text-align: center
		border-bottom: 1px solid #000
	h2
		margin: 0
		font-size: 45px
		line-height: @font-size+10
		text-transform: uppercase
		text-shadow: 0 0 5px rgba(245,245,245,0.8)
	.project-contentblock
		text-align: center
	p
		font-size: 24px