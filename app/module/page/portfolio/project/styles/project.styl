@import 'nib'
@import '../../../../../styles/global.styl'

.project-wrapper.primed .project-slide
	transition: left 0.8s ease-in-out

.project-slide
	position: absolute
	top: 0
	width: 100%
	height: 100%
	background: linear-gradient(#c6b48b,#EDEAD0)
	&.prev
		left: -100%
	&.curr
		left: 0%
	&.next
		left: 100%
	&.last-slide
		animation: lastSlide 0.8s ease-in-out
	&.first-slide
		animation: firstSlide 0.8s ease-in-out

.project-feature
	position: relative
	width: 100%
	height: 100%
	min-height: 320px
	overflow: hidden

.project-bgimg
	position: absolute
	top: 0
	left: 0
	max-width: none

.project-info
	position:absolute
	padding: 15px
	max-width: 65%
	border-radius: 5px
	background-color: rgba(25,25,25,0.3)
	z-index: 5
	.project-titleblock
		text-align: center
		border-bottom: 1px solid #000
	h2
		margin: 0
		font-size: 45px
		line-height: @font-size+10
		text-transform: uppercase
		text-shadow: 0 0 5px rgba(245,245,245,0.8)
	.project-contentblock
		text-align: center
	p
		font-size: 24px

@keyframes firstSlide
	0% { transform: translateX(30px) }
	70% { transform: translateX(-26px) }
	85% { transform: translateX(15px) }
	90% { transform: translateX(-14px) }
	95% { transform: translateX(8px) }
	100% { transform: translateX(0px) }

@keyframes lastSlide
	0% { transform: translateX(-30px) }
	70% { transform: translateX(26px) }
	85% { transform: translateX(-15px) }
	90% { transform: translateX(14px) }
	95% { transform: translateX(-8px) }
	100% { transform: translateX(0px) }